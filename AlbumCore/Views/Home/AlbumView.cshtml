        <img src="image\a12.jpg" alt="Audition" class="img-fluid mx-auto d-block">
    </a>
    <h4 style="text-align:center">Audition</h4>
</div>


<div class="site-section">
    <div class="container gallery-container">
        <div class="tz-gallery">
            <div class="row">
                @{
                    foreach (var image in ViewBag.Libs)
                    {
                        @*<div class="col-lg-12 col-md-12 col-sm-12">
                                <iframe src="https://www.youtube.com/watch?v=E9XQ2MdNgKY"></iframe>
                            </div>*@

                        @*<div class="embed-responsive embed-responsive-4by3">
                                <iframe class="embed-responsive-item" src=@Url.Content(image.bigPath)></iframe>
                            </div>*@

                        @*<div class="col-sm-6 col-md-3">
                                <a href="~/Home/ShowPics?bigPath=@Url.Content(image.bigPath)"
                                   data-fancybox data-options='{"type" : "iframe", "iframe" : {"preload" : false,
                                                                "css" : {"width" : "800","height" : "500"}}}'>

                                    <img src=@Url.Content(image.smPath) class="img-fluid img-thumbnail" alt="" />
                                </a>
                            </div>*@


                        <div class="col-sm-6 col-md-3">
                            <div class="embed-responsive embed-responsive-16by9">
                                <iframe class="embed-responsive-item" src=@Url.Content(image.bigPath)></iframe>
                            </div>
                            <img src=@Url.Content(image.smPath) class="img-fluid img-thumbnail" alt="" />
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>



